                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_product"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_list_product" />

                <View
