<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.app.gcp.viewmodel.OrderDetailViewModel" />

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.OrderDetailActivity">

        <include
            android:id="@+id/toolbar_order_status"
            layout="@layout/toolbar_main"
            android:padding="@dimen/normal_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:isBackButtonHide="false" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/toolbar_order_status">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_order_number"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_bold"
                    android:text="@{@string/order+model.orderStatusResponse.trackingNumber}"
                    app:layout_constraintEnd_toStartOf="@id/tv_order_status"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/order" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_order_status"
                    style="@style/TextViewPrimarySmallStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corner_gray_drawable"
                    android:fontFamily="@font/gotham_black"
                    android:paddingLeft="@dimen/medium_size"
                    android:paddingTop="@dimen/normal_size"
                    android:paddingRight="@dimen/medium_size"
                    android:paddingBottom="@dimen/normal_size"
                    android:text="orderStatus"
                    app:layout_constraintBottom_toBottomOf="@id/tv_order_number"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_order_number"
                    tools:text="@string/pending..." />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_date"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_black"
                    android:text="03-05-2022"
                    app:layout_constraintBottom_toBottomOf="@id/tv_tracking_number"
                    app:layout_constraintEnd_toStartOf="@id/tv_tracking_number"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_tracking_number"
                    tools:text="03-05-2022" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_tracking_number"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_black"
                    android:text="Tracking Id:789789"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_order_status"
                    tools:text="Tracking Id:789789" />

                <View
                    android:id="@+id/view_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/normal_size"
                    android:background="@color/colorGray"
                    app:layout_constraintTop_toBottomOf="@id/tv_tracking_number" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_customer_detail"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_bold"
                    android:text="@string/customer_details"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_title"
                    tools:text="@string/customer_details" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_customer_name"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_black"
                    android:text="name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_customer_detail"
                    tools:text="name" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_customer_address"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_black"
                    android:text="Address"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_customer_name"
                    tools:text="Address" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_customer_email"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_black"
                    android:text="Email"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_customer_address"
                    tools:text="Email" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_customer_contact"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_black"
                    android:text="Contact"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_customer_email"
                    tools:text="Contact" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_customer_gst"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_black"
                    android:text="GST"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_customer_contact"
                    tools:text="GST" />

                <View
                    android:id="@+id/view_customer_detail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/normal_size"
                    android:background="@color/colorGray"
                    app:layout_constraintTop_toBottomOf="@id/tv_customer_gst" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_product_detail"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_bold"
                    android:text="@string/product_details"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_customer_detail"
                    tools:text="@string/product_details" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_product"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_weight="3.5"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_bold"
                    android:text="@string/product"
                    app:layout_constraintEnd_toStartOf="@id/tv_quantity"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_product_detail"
                    tools:text="@string/product" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_quantity"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_weight="3"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_bold"
                    android:text="@string/product"
                    app:layout_constraintStart_toEndOf="@id/tv_product"
                    app:layout_constraintEnd_toStartOf="@id/tv_total"
                    app:layout_constraintTop_toBottomOf="@id/tv_product_detail"
                    tools:text="@string/product" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_total"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_weight="3.5"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_bold"
                    android:text="@string/product"
                    app:layout_constraintStart_toEndOf="@id/tv_quantity"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_product_detail"
                    tools:text="@string/product" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_subtotal"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_bold"
                    android:text="@string/sub_total"
                    app:layout_constraintHorizontal_weight="4"
                    app:layout_constraintEnd_toStartOf="@id/tv_subtotal_value"
                    app:layout_constraintTop_toBottomOf="@id/tv_total"
                    tools:text="@string/sub_total" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_subtotal_value"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_bold"
                    android:text="₹ 25000"
                    app:layout_constraintHorizontal_weight="5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_total"
                    tools:text="₹ 25000" />

                <View
                    android:id="@+id/view_product_detail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/normal_size"
                    android:background="@color/colorGray"
                    app:layout_constraintTop_toBottomOf="@id/tv_subtotal" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_additional_detail"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_bold"
                    android:text="@string/additional_details"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_product_detail"
                    tools:text="@string/additional_details" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_po_number"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_bold"
                    android:text="@string/po_number"
                    app:layout_constraintHorizontal_weight="4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_po_number_value"
                    app:layout_constraintTop_toBottomOf="@id/tv_additional_detail"
                    tools:text="@string/po_number" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_po_number_value"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_bold"
                    android:text="GCP123456789"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="6"
                    app:layout_constraintStart_toEndOf="@id/tv_po_number"
                    app:layout_constraintTop_toBottomOf="@id/tv_additional_detail"
                    tools:text="GCP123456789" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_po_date"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_bold"
                    android:text="@string/po_date"
                    app:layout_constraintHorizontal_weight="4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_po_date_value"
                    app:layout_constraintTop_toBottomOf="@id/tv_po_number"
                    tools:text="@string/po_date" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_po_date_value"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_bold"
                    android:text="02-05-2022"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="6"
                    app:layout_constraintStart_toEndOf="@id/tv_po_date"
                    app:layout_constraintTop_toBottomOf="@id/tv_po_number"
                    tools:text="02-05-2022" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_po_copy"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_bold"
                    android:text="@string/po_copy"
                    app:layout_constraintEnd_toStartOf="@id/tv_po_copy_value"
                    app:layout_constraintHorizontal_weight="4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_po_date"
                    tools:text="@string/po_copy" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_po_copy_value"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_bold"
                    android:text="@string/download"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="6"
                    app:layout_constraintStart_toEndOf="@id/tv_po_copy"
                    app:layout_constraintTop_toBottomOf="@id/tv_po_date"
                    tools:text="@string/download" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_material"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_bold"
                    app:layout_constraintEnd_toStartOf="@id/tv_material_value"
                    android:text="@string/material_user"
                    app:layout_constraintHorizontal_weight="4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_po_copy"
                    tools:text="@string/material_user" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_material_value"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_bold"
                    android:text="Polymer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="6"
                    app:layout_constraintStart_toEndOf="@id/tv_material"
                    app:layout_constraintTop_toBottomOf="@id/tv_po_copy"
                    tools:text="Polymer" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_running"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_bold"
                    android:text="@string/running_meter"
                    app:layout_constraintEnd_toStartOf="@id/tv_running_value"
                    app:layout_constraintHorizontal_weight="4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_material"
                    tools:text="@string/running_meter" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_running_value"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_bold"
                    android:text="General"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="6"
                    app:layout_constraintStart_toEndOf="@id/tv_running"
                    app:layout_constraintTop_toBottomOf="@id/tv_material"
                    tools:text="General" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_comment"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_bold"
                    android:text="@string/comment"
                    app:layout_constraintEnd_toStartOf="@id/tv_comment_value"
                    app:layout_constraintHorizontal_weight="4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_running"
                    tools:text="@string/comment" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_comment_value"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_bold"
                    android:text="comment test"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="6"
                    app:layout_constraintStart_toEndOf="@id/tv_comment"
                    app:layout_constraintTop_toBottomOf="@id/tv_running"
                    tools:text="comment test" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_data_found"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>