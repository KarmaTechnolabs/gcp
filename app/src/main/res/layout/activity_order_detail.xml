                    android:text="₹ 2500"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="2"
                    app:layout_constraintStart_toEndOf="@id/tv_grand_total"
                    app:layout_constraintTop_toTopOf="@id/tv_grand_total"
                    tools:text="₹ 2500" />

                <View
                    android:id="@+id/view_product_detail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/normal_size"
                    android:background="@color/colorGray"
                    app:layout_constraintTop_toBottomOf="@id/tv_grand_total" />

                <androidx.appcompat.widget.AppCompatTextView
