                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_po"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_bold"
                    android:text="@string/purchase_order"
                    app:layout_constraintEnd_toStartOf="@id/tv_po_download"
                    app:layout_constraintHorizontal_weight="5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rv_additional"
                    tools:text="@string/purchase_order" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_po_download"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
