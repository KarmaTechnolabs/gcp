<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.app.gcp.viewmodel.OrderDetailViewModel" />

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.OrderDetailActivity">

        <include
            android:id="@+id/toolbar_order_status"
            layout="@layout/toolbar_main"
            android:padding="@dimen/normal_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:isBackButtonHide="false" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/regular_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_order_status">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_order_number"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/regular_size"
                    android:layout_marginStart="@dimen/regular_size"
                    android:fontFamily="@font/gotham_bold"
                    android:text="@{@string/order+model.orderDetailResponseLiveData.details.id}"
                    app:layout_constraintEnd_toStartOf="@id/tv_order_status"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/order" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_order_status"
                    style="@style/TextViewPrimarySmallStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/regular_size"
                    android:background="@drawable/round_corner_gray_drawable"
                    android:fontFamily="@font/gotham_black"
                    android:paddingLeft="@dimen/medium_size"
                    android:paddingTop="@dimen/normal_size"
                    android:paddingRight="@dimen/medium_size"
                    android:paddingBottom="@dimen/normal_size"
                    android:text="@{model.orderDetailResponseLiveData.details.orderStatus}"
                    app:layout_constraintBottom_toBottomOf="@id/tv_order_number"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_order_number"
                    tools:text="@string/pending..." />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_date"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_black"
                    android:text="@{model.orderDetailResponseLiveData.details.orderDate}"
                    app:layout_constraintBottom_toBottomOf="@id/tv_tracking_number"
                    app:layout_constraintEnd_toStartOf="@id/tv_tracking_number"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_tracking_number"
                    tools:text="03-05-2022" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_tracking_number"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_black"
                    android:text="@{`Tracking Id: `+model.orderDetailResponseLiveData.details.id}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_order_status"
                    tools:text="Tracking Id:789789" />

                <View
                    android:id="@+id/view_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/normal_size"
                    android:background="@color/colorGray"
                    app:layout_constraintTop_toBottomOf="@id/tv_tracking_number" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_customer_detail"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_bold"
                    android:text="@string/customer_details"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_title"
                    tools:text="@string/customer_details" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_customer_name"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_black"
                    android:text="@{`Name: `+model.orderDetailResponseLiveData.details.firstName}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_customer_detail"
                    tools:text="name" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_customer_address"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_black"
                    android:text="@{`Address: `+model.orderDetailResponseLiveData.details.address}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_customer_name"
                    tools:text="Address" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_customer_email"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_black"
                    android:text="@{`Email: `+model.orderDetailResponseLiveData.details.email}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_customer_address"
                    tools:text="Email" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_customer_contact"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_black"
                    android:text="@{`Contact: `+model.orderDetailResponseLiveData.details.phone}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_customer_email"
                    tools:text="Contact" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_customer_gst"
                    style="@style/TextViewPrimaryStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_size"
                    android:fontFamily="@font/gotham_black"
                    android:text="@{`GST: `+model.orderDetailResponseLiveData.details.discountAmount}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_customer_contact"
                    tools:text="GST" />

                <View
                    android:id="@+id/view_customer_detail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/normal_size"
