<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.app.gcp.api.responsemodel.OrdersDetailsResponse.Product" />

        <variable
            name="position"
            type="int" />

        <import type="com.app.gcp.utils.DateTimeUtils" />

        <import type="com.app.gcp.utils.DateTimeConstants" />

        <variable
            name="clickListener"
            type="com.app.gcp.listeners.ItemClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/small_size"
        android:paddingBottom="@dimen/small_size">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_product"
            style="@style/TextViewPrimaryStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_black"
            android:text="@{model.title}"
            app:layout_constraintEnd_toStartOf="@id/tv_rate"
            app:layout_constraintHorizontal_weight="4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Product A" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_quantity"
            style="@style/TextViewPrimarySmallStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_size"
            android:fontFamily="@font/gotham_black"
            android:gravity="center"
            android:text="@{`QTY: `+model.excessQuantity+` + `+model.quantity}"
            android:textColor="@color/colorGray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_product"
            tools:text="500" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_unit"
            style="@style/TextViewPrimaryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_size"
            android:fontFamily="@font/gotham_black"
            android:text="@{`Unit: `+model.unitType}"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_quantity"
            tools:text="Per label price" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_rate"
            style="@style/TextViewPrimarySmallStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_black"
            android:gravity="center"
            android:text="@{`₹ `+model.rate}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_price"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@id/tv_product"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="500" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_price"
            style="@style/TextViewPrimarySmallStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_black"
            android:text="@{`₹ `+model.total}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@id/tv_rate"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="₹ 10000" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>