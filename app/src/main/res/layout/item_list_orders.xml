<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.app.gcp.api.responsemodel.OrdersResponse" />

        <variable
            name="position"
            type="int" />

        <import type="com.app.gcp.utils.DateTimeUtils" />

        <import type="com.app.gcp.utils.DateTimeConstants" />

        <variable
            name="clickListener"
            type="com.app.gcp.listeners.ItemClickListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normal_size"
        android:layout_marginTop="@dimen/mini_size"
        android:layout_marginEnd="@dimen/normal_size"
        android:layout_marginBottom="@dimen/mini_size"
        android:onClick="@{v -> clickListener.onItemClick(v.id,model,position)}"
        app:cardCornerRadius="@dimen/normal_size"
        app:strokeColor="@color/colorGray"
        app:strokeWidth="@dimen/_1sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/normal_size">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_order_number"
                style="@style/TextViewPrimaryStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham_bold"
                android:text="@{@string/order+model.orderId}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/order" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_tracking_number"
                style="@style/TextViewPrimaryStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_size"
                android:fontFamily="@font/gotham_bold"
                android:text="@{@string/tracking+model.trackingNumber}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_order_number"
                tools:text="@string/tracking" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_order_date"
                style="@style/TextViewPrimarySmallStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_size"
                android:fontFamily="@font/gotham_black"
                android:text="@{model.orderDate}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tracking_number"
                tools:text="@string/order_date" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name"
                style="@style/TextViewPrimarySmallStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_size"
                android:fontFamily="@font/gotham_black"
                android:text="@{model.companyName}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_order_date"
                tools:text="Excel Inc. | Mr. John Doe" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_order_status"
                style="@style/TextViewPrimarySmallStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_gray_drawable"
                android:fontFamily="@font/gotham_black"
                android:onClick="@{v -> clickListener.onItemClick(v.id,model,position)}"
                android:paddingLeft="@dimen/medium_size"
                android:paddingTop="@dimen/normal_size"
                android:paddingRight="@dimen/medium_size"
                android:paddingBottom="@dimen/normal_size"
                android:text="@{model.orderStageTitle}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/pending..." />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>