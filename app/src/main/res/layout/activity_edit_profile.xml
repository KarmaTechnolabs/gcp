<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.app.masterproject.utils.Constants"/>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
        <variable
            name="model"
            type="com.app.masterproject.api.responsemodel.LoginResponse" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <include
            android:id="@+id/toolbar_profile"
            layout="@layout/toolbar_main"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_profile">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_profile_pic"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        app:imageUrl="@{model.profileImage}"
                        android:src="@drawable/ic_profile_placeholder"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!--app:imageUrl="@{model.profileImage}"-->
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_edit_profile_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/tiny_size"
                        app:srcCompat="@drawable/ic_camera"
                        app:fabCustomSize="@dimen/_30sdp"
                        android:onClick="@{clickListener::onClick}"
                        app:layout_constraintBottom_toBottomOf="@+id/civ_profile_pic"
                        app:layout_constraintEnd_toEndOf="@+id/civ_profile_pic" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ti_first_name"
                    style="@style/InputTextLayoutStyle"
                    android:layout_marginTop="@dimen/huge_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_label_register">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/TextInputEditBoxStyle"
                        android:drawableEnd="@drawable/ic_user"
                        android:drawablePadding="@dimen/normal_size"
                        android:hint="@string/hint_first_name"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:text="@{model.firstName}"
                        android:maxLength="@integer/max_name"
                        tools:text="Test test" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ti_last_name"
                    style="@style/InputTextLayoutStyle"
                    android:layout_marginTop="@dimen/regular_size">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/TextInputEditBoxStyle"
                        android:drawableEnd="@drawable/ic_user"
                        android:drawablePadding="@dimen/normal_size"
                        android:hint="@string/hint_last_name"
                        android:text="@{model.lastName}"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLength="@integer/max_name"
                        tools:text="Test test" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ti_email"
                    style="@style/InputTextLayoutStyle"
                    android:layout_marginTop="@dimen/regular_size">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/TextInputEditBoxStyle"
                        android:drawableEnd="@drawable/ic_email"
                        android:drawablePadding="@dimen/normal_size"
                        android:hint="@string/hint_email"
                        android:text="@{model.email}"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:maxLength="@integer/max_email_length"
                        tools:text="vishal@mailinator.com" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ti_mobile_number"
                    style="@style/InputTextLayoutStyle"
                    android:layout_marginTop="@dimen/regular_size">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/TextInputEditBoxStyle"
                        android:drawableEnd="@drawable/ic_mobile"
                        android:drawablePadding="@dimen/normal_size"
                        android:hint="@string/hint_mobile_number"
                        android:text="@{model.userMobile}"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="@integer/max_number"
                        tools:text="vishal@mailinator.com" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ti_state"
                    style="@style/InputTextLayoutStyle"
                    android:onClick="@{clickListener::onClick}"
                    android:layout_marginTop="@dimen/regular_size">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/TextInputEditBoxStyle"
                        android:drawableEnd="@drawable/ic_location_pin_gray"
                        android:drawablePadding="@dimen/normal_size"
                        android:onClick="@{clickListener::onClick}"
                        android:hint="@string/hint_state"
                        android:text="@{model.stateData.name}"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        tools:text="vishal@mailinator.com" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ti_dob"
                    style="@style/InputTextLayoutStyle"
                    android:onClick="@{clickListener::onClick}"
                    android:layout_marginTop="@dimen/regular_size">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/TextInputEditBoxStyle"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:drawablePadding="@dimen/normal_size"
                        android:focusable="false"
                        android:text="@{model.dob}"
                        android:onClick="@{clickListener::onClick}"
                        android:focusableInTouchMode="false"
                        android:hint="@string/hint_date_of_birth"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        tools:text="vishal@mailinator.com" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_save"
                    style="@style/PrimaryColorButton"
                    android:onClick="@{clickListener::onClick}"
                    android:layout_marginBottom="@dimen/regular_size"
                    android:text="@string/save" />
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>