<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.gcptrack.viewmodel.OrderStatusUpdateViewModel" />
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.OrderDetailActivity">

        <include
            android:id="@+id/toolbar_order_status"
            layout="@layout/toolbar_main"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:isBackButtonHide="false" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_order_number"
            style="@style/TextViewPrimaryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/regular_size"
            android:fontFamily="@font/gotham_bold"
            android:text="@{@string/order+model.orderStatusResponse.trackingNumber}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_order_status"
            tools:text="@string/order" />

<!--        <com.google.android.material.textfield.TextInputLayout-->
<!--            android:id="@+id/ti_order_status"-->
<!--            style="@style/InputTextLayoutStyle"-->
<!--            android:layout_margin="@dimen/regular_size"-->
<!--            app:hintEnabled="false"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/tv_order_number">-->

<!--            <com.google.android.material.textfield.TextInputEditText-->
<!--                android:id="@+id/edt_order_status"-->
<!--                style="@style/TextInputEditBoxStyle"-->
<!--                android:hint="@string/hint_state"-->
<!--                android:inputType="text"-->
<!--                android:focusable="false"-->
<!--                android:longClickable="false"-->

<!--                android:clickable="true"-->
<!--                android:drawableRight="@drawable/ic_arrow_down"-->
<!--                tools:text="test@mailinator.com" />-->
<!--        </com.google.android.material.textfield.TextInputLayout>-->
        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spn_order_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/regular_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_number"
            android:theme="@android:style/TextAppearance.Material.Title"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ti_order_comment"
            style="@style/InputTextLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/regular_size"
            app:hintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spn_order_status">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_order_comment"
                style="@style/TextInputEditBoxStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:hint="@string/comment"
                android:inputType="textMultiLine"
                android:lines="8"
                android:maxLength="@integer/max_email_length"
                android:maxLines="10"
                android:minLines="6"
                tools:text="test@mailinator.com" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/regular_size"
            android:onClick="@{clickListener::onClick}"
            android:padding="@dimen/medium_size"
            android:text="@string/submit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ti_order_comment" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/regular_size"
            android:backgroundTint="@color/colorGray"
            android:onClick="@{clickListener::onClick}"
            android:padding="@dimen/medium_size"
            android:text="@string/cancel"
            app:layout_constraintStart_toEndOf="@id/btn_submit"
            app:layout_constraintTop_toTopOf="@+id/btn_submit" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>