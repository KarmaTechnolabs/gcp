<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
        <import type="com.app.gcp.utils.Utils"/>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
        <variable
            name="model"
            type="com.app.gcp.api.responsemodel.LoginResponse" />
        <variable
            name="isLogin"
            type="boolean" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".ui.navigation.MoreNavigationFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/fragment_horizontal_padding"
            android:paddingEnd="@dimen/fragment_horizontal_padding">

            <LinearLayout
                android:id="@+id/ll_edit_profile"
                android:onClick="@{clickListener::onClick}"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
>
                <com.google.android.material.card.MaterialCardView
                    android:layout_marginTop="@dimen/fragment_horizontal_padding"
                    android:layout_marginStart="@dimen/fragment_horizontal_padding"
                    android:layout_marginEnd="@dimen/fragment_horizontal_padding"
                    android:layout_width="wrap_content"
                    app:cardElevation="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_70sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:src="@drawable/ic_profile_placeholder"
                        app:imageUrl="@{model.profileImage}"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"/>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_user_name"
                    style="@style/MoreTextViewStyle"
                    android:layout_width="wrap_content"
                    tools:text="John Wick"
                    android:includeFontPadding="true"
                    android:textStyle="bold"
                    android:drawablePadding="@dimen/_8sdp"
                    android:layout_gravity="center_horizontal"
                    android:drawableEnd="@drawable/ic_edit"
                    android:text="@{model.fullName}" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_user_email"
                    android:layout_marginBottom="@dimen/normal_size"
                    android:fontFamily="@font/gotham_book_italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_normal"
                    tools:text="steven.john@gmail.com"
                    android:includeFontPadding="true"
                    android:layout_gravity="center_horizontal"
                    android:onClick="@{clickListener::onClick}"
                    android:text="@{model.email}" />

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_change_password"
                style="@style/MoreTextViewStyle"
                android:background="?attr/selectableItemBackground"
                android:onClick="@{clickListener::onClick}"
                android:text="@string/change_password" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorGreyText" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_about_us"
                style="@style/MoreTextViewStyle"
                android:background="?attr/selectableItemBackground"
                android:onClick="@{clickListener::onClick}"
                android:text="@string/about_us" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorGreyText" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_app_version_label"
                    android:layout_centerVertical="true"
                    style="@style/MoreTextViewStyle"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/tv_app_version"
                    android:background="?attr/selectableItemBackground"
                    android:text="@string/app_version" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_app_version"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    tools:text="1.0.0"
                    style="@style/MoreTextViewStyle"
                    app:fontFamily="@font/gotham_book_italic"
                    android:text="@{Utils.getAppVersionName()}" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorGreyText" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_logout"
                style="@style/MoreTextViewStyle"
                android:background="?attr/selectableItemBackground"
                android:onClick="@{clickListener::onClick}"
                android:text="@string/menu_logout"
                android:visibility="@{isLogin?View.VISIBLE:View.GONE}" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorGreyText"
                android:visibility="@{isLogin?View.VISIBLE:View.GONE}" />

        </LinearLayout>

    </ScrollView>
</layout>