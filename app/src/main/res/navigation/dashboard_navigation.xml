<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_orders">

    <fragment
        android:id="@+id/nav_orders"
        android:name="com.app.gcp.ui.fragments.OrdersFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_orders" />

    <fragment
        android:id="@+id/nav_order_tracking"
        android:name="com.app.gcp.ui.fragments.TrackOrderFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_track_order" >
        <argument
            android:name="isBack"
            app:argType="boolean"
            android:defaultValue="false"/>
    </fragment>

    <fragment
        android:id="@+id/nav_change_password"
        android:name="com.app.gcp.ui.fragments.ChangePasswordFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_change_password" />

    <fragment
        android:id="@+id/nav_faqs"
        android:name="com.app.gcp.ui.fragments.FAQsFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_faqs" />

</navigation>