<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_orders">
    <fragment
        android:id="@+id/nav_orders"
        android:name="com.gcptrack.ui.fragments.OrdersFragment"
        android:label="@string/menu_orders"
        tools:layout="@layout/fragment_orders" />
    <fragment
        android:id="@+id/nav_customers"
        android:name="com.gcptrack.ui.fragments.CustomersFragment"
        android:label="@string/menu_customers"
        tools:layout="@layout/fragment_customers" />
    <fragment
        android:id="@+id/nav_order_tracking"
        android:name="com.gcptrack.ui.fragments.TrackOrderFragment"
        android:label="@string/menu_track_your_order"
        tools:layout="@layout/fragment_track_order">
        <argument
            android:name="isBack"
            android:defaultValue="false"
            app:argType="boolean" />
    </fragment>

    <fragment
        android:id="@+id/nav_change_password"
        android:name="com.gcptrack.ui.fragments.ChangePasswordFragment"
        android:label="@string/menu_change_password"
        tools:layout="@layout/fragment_change_password" />

    <fragment
        android:id="@+id/nav_faqs"
        android:name="com.gcptrack.ui.fragments.FAQsFragment"
        android:label="@string/menu_faqs"
        tools:layout="@layout/fragment_faqs" />

</navigation>