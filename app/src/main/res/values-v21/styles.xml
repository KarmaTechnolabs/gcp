<resources>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="TranlucentStatusBarStyle" parent="AppTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:fontFamily">@font/gotham_book</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorGreyText</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>
